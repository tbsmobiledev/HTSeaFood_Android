<?xml version="1.0" encoding="utf-8"?><!-- shadow_top_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="@color/white"
                android:startColor="#f5f5f5" />
        </shape>
    </item>
    <item android:right="@dimen/_1sdp" android:left="@dimen/_1sdp" android:top="@dimen/_2sdp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Shadow color -->
            <corners android:radius="@dimen/_7sdp" /> <!-- Adjust the radius to match the content -->
        </shape>
    </item>
</layer-list>