<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/sora_bold"
            android:includeFontPadding="false"
            android:padding="@dimen/_11sdp"
            android:text="@string/invoice"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

        <!--        <ImageView-->
        <!--            android:id="@+id/ivSearch"-->
        <!--            android:layout_width="@dimen/_17sdp"-->
        <!--            android:layout_height="@dimen/_17sdp"-->
        <!--            android:layout_centerVertical="true"-->
        <!--            android:layout_marginEnd="@dimen/_10sdp"-->
        <!--            android:layout_toStartOf="@+id/ivLogout"-->
        <!--            android:src="@drawable/search" />-->


        <ImageView
            android:visibility="gone"
            android:id="@+id/ivAdd"
            android:layout_width="@dimen/_29sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_centerVertical="true"
            android:paddingEnd="@dimen/_12sdp"
            android:layout_toStartOf="@+id/ivLogout"
            android:src="@drawable/add" />

        <ImageView
            android:id="@+id/ivLogout"
            android:layout_width="@dimen/_27sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingEnd="@dimen/_10sdp"
            android:src="@drawable/logout" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/corner_round_box"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_bold"
                android:includeFontPadding="false"
                android:text="Customer No:"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:fontFamily="@font/sora_regular"
                android:includeFontPadding="false"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_12ssp"
                tools:text="000125" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_bold"
                android:includeFontPadding="false"
                android:text="Name:"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tvCustName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:fontFamily="@font/sora_regular"
                android:includeFontPadding="false"
                tools:text="SYSCO ASIAN FOODS, INC."
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_bold"
                android:includeFontPadding="false"
                android:text="Email:"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tvCustEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:fontFamily="@font/sora_regular"
                android:includeFontPadding="false"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_12ssp"
                tools:text="abc@gmail.com" />
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvNoDataFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/sora_bold"
            android:text="No Records Found"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/_18ssp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/buttom_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llInvoice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gredient_select"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivInvoice"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/invoice"
                app:tint="@color/blue" />

            <TextView
                android:id="@+id/tvInvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/sora_bold"
                android:includeFontPadding="false"
                android:text="@string/invoice"
                android:textColor="@color/blue"
                android:textSize="@dimen/_9ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llOrder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivOrder"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/order" />

            <TextView
                android:id="@+id/tvOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:includeFontPadding="false"
                android:text="@string/order"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_9ssp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llShipment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivShipment"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/shipment" />

            <TextView
                android:id="@+id/tvShipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:includeFontPadding="false"
                android:text="@string/shipment"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_9ssp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
